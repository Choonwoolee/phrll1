<?xml version='1.0' encoding='utf-8'?>
<widget id="com.phrll.app2" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>App2</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <access origin="*" />
    <platform name="android">
    <!-- you can use any density that exists in the Android project -->
	    <splash src="res/drawable-hdpi/splash.9.png" density="port-hdpi"/>
	    <splash src="res/drawable-mdpi/splash.9.png" density="port-mdpi"/>
	    <splash src="res/drawable-xhdpi/splash.9.png" density="port-xhdpi"/>
	    <splash src="res/drawable-xxhdpi/splash.9.png" density="port-xxhdpi"/>

	</platform>
	 	<preference name="SplashScreenDelay" value="10000" />
   <preference name="Orientation" value="portrait" />
   <preference name="Fullscreen" value="true" />
<feature name="Geolocation">
    <param name="ios-package" value="CDVLocation" />
</feature>
</widget>
