<?xml version='1.0' encoding='utf-8'?>
<widget id="com.phrll.app2" version="1.02" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Pain Doctor</name>
    <description>
        Pain Doctor
    </description>
    <author email="support@phrll.com" href="http://www.phrll.com">
        Phrll Team
    </author>
    <content src="index.html" />
    <access origin="*" />
    <platform name="android">
    <!-- you can use any density that exists in the Android project -->
	    <splash src="res/drawable-hdpi/splash.9.png" density="port-hdpi"/>
	    <splash src="res/drawable-mdpi/splash.9.png" density="port-mdpi"/>
	    <splash src="res/drawable-xhdpi/splash.9.png" density="port-xhdpi"/>
	    <splash src="res/drawable-xxhdpi/splash.9.png" density="port-xxhdpi"/>
        <icon src="res/drawable-mdpi/ic_launcher.png" density="mdpi" />
        <icon src="res/drawable-hdpi/ic_launcher.png" density="hdpi" />
        <icon src="res/drawable-xhdpi/ic_launcher.png" density="xhdpi" />

	</platform>
    <platform name="ios">
                      <!-- iOS 8.0+ -->
              <!-- iPhone 6 Plus  -->
          <icon src="res/ios/appicon-60@3x.png" width="180" height="180" />
          <!-- iOS 7.0+ -->
          <!-- iPhone / iPod Touch  -->
          <icon src="res/ios/appicon-60.png" width="60" height="60" />
          <icon src="res/ios/appicon-60@2x.png" width="120" height="120" />
          <!-- iPad -->
          <icon src="res/ios/appicon-76.png" width="76" height="76" />
          <icon src="res/ios/appicon-76@2x.png" width="152" height="152" />
          <!-- iOS 6.1 -->
          <!-- Spotlight Icon -->
          <icon src="res/ios/appicon-Small-40.png" width="40" height="40" />
          <icon src="res/ios/appicon-Small-40@2x.png" width="80" height="80" />
          <!-- iPhone / iPod Touch -->
          <icon src="res/ios/appicon.png" width="57" height="57" />
          <icon src="res/ios/appicon@2x.png" width="114" height="114" />
          <!-- iPad -->
          <icon src="res/ios/appicon-72.png" width="72" height="72" />
          <icon src="res/ios/appicon-72@2x.png" width="144" height="144" />
          <!-- iPhone Spotlight and Settings Icon -->
          <icon src="res/ios/appicon-small.png" width="29" height="29" />
          <icon src="res/ios/appicon-small@2x.png" width="58" height="58" />
          <!-- iPad Spotlight and Settings Icon -->
          <icon src="res/ios/appicon-Small-50.png" width="50" height="50" />
          <icon src="res/ios/appicon-Small-50@2x.png" width="100" height="100" />

           <!-- images are determined by width and height. The following are supported -->
            <splash src="res/ios/Default.png" width="320" height="480"/>
            <splash src="res/ios/Default@2x.png" width="640" height="960"/>
            <splash src="res/ios/Default-568h@2x.png" width="640" height="1136"/>
            <splash src="res/ios/Default-667h@2x.png" width="750" height="1334"/>
            <splash src="res/ios/Default-Portrait-736h@3x.png" width="1242" height="2208"/>
            
    </platform>    
   <preference name="Orientation" value="portrait" />
   <preference name="Fullscreen" value="true" />
   <preference name="DisallowOverscroll" value="true"/>
   <preference name="StatusBarOverlaysWebView" value="false" />
    <feature name="Geolocation">
        <param name="android-package" value="org.apache.cordova.device.Device" />
        <param name="ios-package" value="CDVLocation" />
    </feature>
</widget>